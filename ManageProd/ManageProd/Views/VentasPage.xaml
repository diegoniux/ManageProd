<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:renderers="clr-namespace:ManageProd.Renderers"
    x:Class="ManageProd.Views.VentasPage">
    <ContentPage.Resources>
        <Style TargetType="Grid">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor"
                                        Value="#DCD7D7" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        <RelativeLayout Padding="0">
            <StackLayout
                Margin="0" 
                Padding="0" 
                Orientation="Vertical" 
                VerticalOptions="FillAndExpand" 
                Spacing="0"
                RelativeLayout.WidthConstraint= "{ConstraintExpression Type=RelativeToParent, Property=Width}"
                RelativeLayout.HeightConstraint= "{ConstraintExpression Type=RelativeToParent, Property=Height}">

                <Grid Margin="20" 
                      Padding="0" 
                      ColumnSpacing="0" 
                      RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Image Source="ventas.png"
                            Grid.Row="0"
                            Grid.Column="0">
                    </Image>
                    <Label Text="Orden de Venta"
                            VerticalOptions="CenterAndExpand" 
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Start"
                            FontAttributes="Bold,Italic"
                            FontSize="Title"
                            Margin="0,0"
                            TextColor="Black"
                            Grid.Column="1"
                            Grid.Row="0"/>

                    <!--ORDEN DE VENTA-->
                    <Grid
                        Margin="1,10,1,1"
                        ColumnSpacing="0"
                        RowSpacing="0"
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        BackgroundColor="#FFF">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"></RowDefinition>
                            <RowDefinition Height="40"></RowDefinition>
                            <RowDefinition Height="40"></RowDefinition>
                            <RowDefinition Height="40"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.8*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Label
                            Text="Folio"
                            Grid.Column="0"
                            Grid.Row="0"
                            Grid.ColumnSpan="2"
                            FontSize="12"
                            Margin="5,0,0,0"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Start"
                            FontAttributes="Bold"
                            TextColor="#353535"
                            FontFamily="Helvetica">
                        </Label>


                        <Frame
                            Padding="0"
                            CornerRadius="26"
                            Grid.Row="0"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Margin="0,5,0,5"
                            HasShadow="False"
                            BackgroundColor="#9AC5F9">
                            <StackLayout Orientation="Horizontal" Padding="0" Spacing="0">
                                <renderers:EntryIcon
                                    Text="{Binding Order.IdOrdenVenta, Mode=TwoWay}"
                                    Keyboard="Numeric"
                                    MaxLength="5"
                                    CornerRadius="5"
                                    FontAttributes="Bold"
                                    FontSize="12"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="FillAndExpand"
                                    HorizontalTextAlignment="Center"
                                    VerticalTextAlignment="Center"
                                    Margin="0,0,0,-8"
                                    IsEnabled="False">
                                </renderers:EntryIcon>
                            </StackLayout>
                        </Frame>

                        <Label
                            Text="Fecha"
                            Grid.Column="3"
                            Grid.Row="0"
                            Grid.ColumnSpan="2"
                            FontSize="12"
                            Margin="5,0,0,0"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Start"
                            FontAttributes="Bold"
                            TextColor="#353535"
                            FontFamily="Helvetica">
                        </Label>

                        <Frame
                            Padding="0"
                            CornerRadius="26"
                            Grid.Column="4"
                            Grid.ColumnSpan="2"
                            Grid.Row="0"
                            Margin="0,5,0,5"
                            HasShadow="False"
                            BackgroundColor="#9AC5F9">
                            <StackLayout Orientation="Horizontal" Padding="0" Spacing="0"
                                         Margin="10,0">
                                <DatePicker
                                    Date="{Binding Order.FechaVenta, Mode=TwoWay}"
                                    VerticalOptions="FillAndExpand"
                                    HorizontalOptions="FillAndExpand"
                                    Format="dd/MM/yyyy"
                                    FontAttributes="Bold"
                                    Margin="0,0,0,-8"
                                    FontSize="12">
                                </DatePicker>
                            </StackLayout>
                        </Frame>

                        <Label
                            Text="Cliente"
                            Grid.Column="6"
                            Grid.Row="0"
                            FontSize="12"
                            Margin="5,0,0,0"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Start"
                            FontAttributes="Bold"
                            TextColor="#353535"
                            FontFamily="Helvetica">
                        </Label>

                        <Frame
                            Padding="0"
                            CornerRadius="26"
                            Grid.Row="0"
                            Grid.Column="7"
                            Grid.ColumnSpan="3"
                            Margin="0,5,0,5"
                            HasShadow="False"
                            BackgroundColor="#9AC5F9">
                            <StackLayout Orientation="Horizontal" Padding="0" Spacing="0">
                                <Picker
                                    VerticalOptions="FillAndExpand"
                                    HorizontalOptions="FillAndExpand"
                                    Title="--Seleccione--"
                                    HorizontalTextAlignment="Center"
                                    ItemsSource="{Binding ListClientes}"
                                    SelectedItem="{Binding ClienteSelected}"
                                    ItemDisplayBinding="{Binding Nombre}"
                                    Margin="10,0,0,-8"
                                    VerticalTextAlignment="Center"
                                    FontSize="12">
                                </Picker>
                            </StackLayout>
                        </Frame>

                        <Label
                            Text="Creditos &#10;Anteriores"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Grid.Row="1"
                            FontSize="12"
                            Margin="5,0,0,0"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Start"
                            FontAttributes="Bold"
                            TextColor="#353535"
                            FontFamily="Helvetica">
                        </Label>

                        <Frame
                            Padding="0"
                            CornerRadius="26"
                            Grid.Row="1"
                            Grid.Column="1"
                            Grid.ColumnSpan="9"
                            Margin="0,5,0,5"
                            HasShadow="False"
                            BackgroundColor="#9AC5F9">
                            <StackLayout Orientation="Horizontal" Padding="0" Spacing="0" Margin="10,0">
                                <renderers:EntryIcon
                                    Text="{Binding Order.CreditosAnteriores, Mode=TwoWay}"
                                    Keyboard="Text"
                                    MaxLength="500"
                                    CornerRadius="5"
                                    FontAttributes="None"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="FillAndExpand"
                                    HorizontalTextAlignment="Start"
                                    VerticalTextAlignment="Start"
                                    Margin="0,0,0,-8"
                                    FontSize="12">
                                </renderers:EntryIcon>
                            </StackLayout>
                        </Frame>

                        <Label
                            Text="Existencias &#10;Anteriores"
                            Grid.Column="0"
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            FontSize="12"
                            Margin="5,0,0,0"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Start"
                            FontAttributes="Bold"
                            TextColor="#353535"
                            FontFamily="Helvetica">
                        </Label>

                        <Frame
                            Padding="0"
                            CornerRadius="26"
                            Grid.Row="2"
                            Grid.Column="1"
                            Grid.ColumnSpan="9"
                            Margin="0,5,0,5"
                            HasShadow="False"
                            BackgroundColor="#9AC5F9">
                            <StackLayout Orientation="Horizontal" Padding="0" Spacing="0" Margin="10,0">
                                <renderers:EntryIcon
                                    Text="{Binding Order.ExistenciasAnteriores, Mode=TwoWay}"
                                    Keyboard="Text"
                                    MaxLength="500"
                                    CornerRadius="5"
                                    FontAttributes="None"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="FillAndExpand"
                                    HorizontalTextAlignment="Start"
                                    VerticalTextAlignment="Start"
                                    Margin="0,0,0,-8"
                                    FontSize="12">
                                </renderers:EntryIcon>
                            </StackLayout>
                        </Frame>

                        <Label
                            Text="Monto Total"
                            Grid.Column="1"
                            Grid.Row="3"
                            Grid.ColumnSpan="2"
                            FontSize="12"
                            Margin="5,0,0,0"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Start"
                            FontAttributes="Bold"
                            TextColor="#353535"
                            FontFamily="Helvetica">
                        </Label>


                        <Frame
                                Padding="0"
                                CornerRadius="26"
                                Grid.Column="3"
                                Grid.ColumnSpan="3"
                                Grid.Row="3"
                                Margin="0,5,0,5"
                                HasShadow="False"
                                BackgroundColor="#9AC5F9">
                            <StackLayout Orientation="Horizontal" Padding="0" Spacing="0"  Margin="5,0">
                                <renderers:EntryIcon
                                        x:Name="Monto"
                                        Text="{Binding Order.MontoTotal, Mode=TwoWay}"
                                        CornerRadius="5"
                                        MaxLength="15"
                                        FontAttributes="Bold"
                                        FontSize="11"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="FillAndExpand"
                                        HorizontalTextAlignment="Center"
                                        VerticalTextAlignment="Center"
                                        Margin="0,0,0,-8"
                                        IsReadOnly="True">
                                </renderers:EntryIcon>
                            </StackLayout>
                        </Frame>

                        <Button
                            Text="Guardar"
                            Grid.Row="3"
                            Grid.Column="7"
                            Grid.ColumnSpan="3"
                            CornerRadius="14"
                            Command="{Binding SaveOrder}"
                            BackgroundColor="#031255"
                            Margin="4"
                            FontAttributes="Bold"
                            TextColor="#FFF"
                            FontSize="12">
                        </Button>

                    </Grid>
                    <!--DETALLE DE LA ORDEN-->
                    <Grid
                        IsVisible="{Binding HayOrden, Mode=TwoWay}"
                        Margin="1,10,1,1"
                        ColumnSpacing="0"
                        RowSpacing="0"
                        Grid.Row="2"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        VerticalOptions="FillAndExpand"
                        HorizontalOptions="FillAndExpand"
                        BackgroundColor="#FFF">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Label
                            Text="DETALLE DE LA VENTA"
                            VerticalOptions="FillAndExpand"
                            HorizontalOptions="FillAndExpand"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Center"
                            BackgroundColor="#2877D5"
                            TextColor="#FFF"
                            FontSize="14"
                            Grid.Column="0"
                            Grid.Row="0"
                            FontAttributes="Bold"
                            FontFamily="Helvetica">
                        </Label>

                        <!--CAPTURA DE DETALLE DE VENTA -->
                        <Grid
                            Margin="1,10,1,1"
                            ColumnSpacing="0"
                            RowSpacing="0"
                            Grid.Row="1"
                            Grid.Column="0"
                            BackgroundColor="#FFF"
                            VerticalOptions="FillAndExpand"
                            HorizontalOptions="FillAndExpand">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"></RowDefinition>
                                <RowDefinition Height="40"></RowDefinition>
                                <RowDefinition Height="40"></RowDefinition>
                                <RowDefinition Height="40"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Label
                            Text="Proveedor"
                            Grid.ColumnSpan="2"
                            Grid.Column="0"
                            Grid.Row="0"
                            FontSize="12"
                            Margin="5,0,0,0"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Start"
                            FontAttributes="Bold"
                            TextColor="#353535"
                            FontFamily="Helvetica">
                            </Label>

                            <Frame
                            Padding="0"
                            CornerRadius="26"
                            Grid.Row="0"
                            Grid.Column="2"
                            Grid.ColumnSpan="4"
                            Margin="0,5,0,5"
                            HasShadow="False"
                            BackgroundColor="#9AC5F9">
                                <StackLayout Orientation="Horizontal" Padding="0" Spacing="0">
                                    <Picker
                                        x:Name="picker"
                                    VerticalOptions="FillAndExpand"
                                    HorizontalOptions="FillAndExpand"
                                    Title="--Seleccione--"
                                    HorizontalTextAlignment="Center"
                                    ItemsSource="{Binding ListProveedores}"
                                    SelectedItem="{Binding ProveedorSelected}"
                                    ItemDisplayBinding="{Binding Proveedor}"
                                    Margin="10,0,0,-8"
                                    VerticalTextAlignment="Center"
                                        SelectedIndexChanged="Picker_SelectedIndexChanged"
                                    FontSize="12">
                                    </Picker>
                                </StackLayout>
                            </Frame>

                            <Label
                                Text="Producto"
                                Grid.Column="6"
                                Grid.ColumnSpan="2"
                                Grid.Row="0"
                                FontSize="12"
                                Margin="5,0,0,0"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Center"
                                FontAttributes="Bold"
                                TextColor="#353535"
                                FontFamily="Helvetica">
                            </Label>

                            <Frame
                                Padding="0"
                                CornerRadius="26"
                                Grid.Row="0"
                                Grid.Column="8"
                                Grid.ColumnSpan="4"
                                Margin="0,5,0,5"
                                HasShadow="False"
                                BackgroundColor="#9AC5F9">
                                <StackLayout Orientation="Horizontal" Padding="0" Spacing="0">
                                    <Picker
                                        x:Name="pickerProducto"
                                        VerticalOptions="FillAndExpand"
                                        HorizontalOptions="FillAndExpand"
                                        Title="--Seleccione--"
                                        HorizontalTextAlignment="Center"
                                        VerticalTextAlignment="Center"
                                        ItemsSource="{Binding ListProduct}"
                                        SelectedItem="{Binding ProductoSelected, Mode=TwoWay}"
                                        ItemDisplayBinding="{Binding Producto}"  
                                        SelectedIndexChanged="pickerProducto_SelectedIndexChanged"
                                        FontSize="12"
                                        Margin="10,0,0,-8">
                                    </Picker>
                                </StackLayout>
                            </Frame>

                            <Label
                                Text="Cantidad"
                                Grid.Column="0"
                                Grid.Row="1"
                                FontSize="12"
                                Grid.ColumnSpan="2"
                                Margin="5,0,0,0"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Start"
                                FontAttributes="Bold"
                                TextColor="#353535"
                                FontFamily="Helvetica">
                            </Label>

                            <Frame
                                Padding="0"
                                CornerRadius="26"
                                Grid.Column="2"
                                Grid.ColumnSpan="2"
                                Grid.Row="1"
                                Margin="0,5,0,5"
                                HasShadow="False"
                                BackgroundColor="#9AC5F9">
                                <StackLayout Orientation="Horizontal" Padding="0" Spacing="0">
                                    <renderers:EntryIcon
                                        x:Name="Cantidad"
                                        Text="{Binding DetalleSelected.Cantidad}"
                                        Keyboard="Numeric"
                                        CornerRadius="5"
                                        FontAttributes="None"
                                        FontSize="14"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="FillAndExpand"
                                        HorizontalTextAlignment="Center"
                                        VerticalTextAlignment="Center"
                                        Margin="0,0,0,-8"
                                        >
                                        <renderers:EntryIcon.Behaviors>
                                            <renderers:LengthValidateBehavior MaxLength="10"/>
                                        </renderers:EntryIcon.Behaviors>
                                    </renderers:EntryIcon>
                                </StackLayout>
                            </Frame>

                            <Label
                                Text="Peso Neto"
                                Grid.Column="4"
                                Grid.ColumnSpan="2"
                                Grid.Row="1"
                                FontSize="12"
                                Margin="5,0,0,0"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Center"
                                FontAttributes="Bold"
                                TextColor="#353535"
                                FontFamily="Helvetica">
                            </Label>

                            <Frame
                                Padding="0"
                                CornerRadius="26"
                                Grid.Column="6"
                                Grid.ColumnSpan="2"
                                Grid.Row="1"
                                Margin="0,5,0,5"
                                HasShadow="False"
                                BackgroundColor="#9AC5F9">
                                <StackLayout Orientation="Horizontal" Padding="0" Spacing="0">
                                    <renderers:EntryIcon
                                        x:Name="PesoNeto"
                                        Text="{Binding DetalleSelected.PesoNeto}"
                                        Keyboard="Numeric"
                                        CornerRadius="5"
                                        FontAttributes="None"
                                        FontSize="14"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="FillAndExpand"
                                        HorizontalTextAlignment="Center"
                                        VerticalTextAlignment="Center"
                                        Margin="0,0,0,-8"
                                        TextChanged="TextChanged">
                                        <renderers:EntryIcon.Behaviors>
                                            <renderers:LengthValidateBehavior MaxLength="7"/>
                                        </renderers:EntryIcon.Behaviors>
                                    </renderers:EntryIcon>
                                </StackLayout>
                            </Frame>


                            <Label
                                Text="Precio"
                                Grid.Column="8"
                                Grid.ColumnSpan="2"
                                Grid.Row="1"
                                FontSize="12"
                                Margin="5,0,0,0"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Center"
                                FontAttributes="Bold"
                                TextColor="#353535"
                                FontFamily="Helvetica">
                            </Label>

                            <Frame
                                Padding="0"
                                CornerRadius="26"
                                Grid.Column="10"
                                Grid.ColumnSpan="2"
                                Grid.Row="1"
                                Margin="0,5,0,5"
                                HasShadow="False"
                                BackgroundColor="#9AC5F9">
                                <StackLayout Orientation="Horizontal" Padding="0" Spacing="0">
                                    <renderers:EntryIcon
                                        x:Name="Precio"
                                        Text="{Binding DetalleSelected.Precio}"
                                        Keyboard="Numeric"
                                        CornerRadius="5"
                                        FontAttributes="None"
                                        FontSize="14"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="FillAndExpand"
                                        HorizontalTextAlignment="Center"
                                        VerticalTextAlignment="Center"
                                        Margin="0,0,0,-8"
                                        >
                                        <renderers:EntryIcon.Behaviors>
                                            <renderers:LengthValidateBehavior MaxLength="10"/>
                                        </renderers:EntryIcon.Behaviors>
                                    </renderers:EntryIcon>
                                </StackLayout>
                            </Frame>

                            <Label
                                Text="Descuento"
                                Grid.Column="0"
                                Grid.Row="2"
                                Grid.ColumnSpan="2"
                                FontSize="12"
                                Margin="3,0,0,0"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Start"
                                FontAttributes="Bold"
                                TextColor="#353535"
                                FontFamily="Helvetica">
                            </Label>

                            <Frame
                                Padding="0"
                                CornerRadius="26"
                                Grid.Column="2"
                                Grid.ColumnSpan="2"
                                Grid.Row="2"
                                Margin="0,5,0,5"
                                HasShadow="False"
                                BackgroundColor="#9AC5F9">
                                <StackLayout Orientation="Horizontal" Padding="0" Spacing="0">
                                    <renderers:EntryIcon
                                        x:Name="Descuento"
                                        Text="{Binding DetalleSelected.Descuento}"
                                        Keyboard="Numeric"
                                        CornerRadius="5"
                                        FontAttributes="None"
                                        FontSize="14"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="FillAndExpand"
                                        HorizontalTextAlignment="Center"
                                        VerticalTextAlignment="Center"
                                        Margin="0,0,0,-8"
                                        TextChanged="TextChanged">
                                        <renderers:EntryIcon.Behaviors>
                                            <renderers:LengthValidateBehavior MaxLength="10"/>
                                        </renderers:EntryIcon.Behaviors>
                                    </renderers:EntryIcon>
                                </StackLayout>
                            </Frame>

                            <Label
                                Text="Importe"
                                Grid.Column="4"
                                Grid.Row="2"
                                Grid.ColumnSpan="2"
                                FontSize="12"
                                Margin="3,0,0,0"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Center"
                                FontAttributes="Bold"
                                TextColor="#353535"
                                FontFamily="Helvetica">
                            </Label>

                            <Frame
                                Padding="0"
                                CornerRadius="26"
                                Grid.Column="6"
                                Grid.ColumnSpan="2"
                                Grid.Row="2"
                                Margin="0,5,0,5"
                                HasShadow="False"
                                BackgroundColor="#9AC5F9">
                                <StackLayout Orientation="Horizontal" Padding="0" Spacing="0">
                                    <renderers:EntryIcon
                                        x:Name="Importe"
                                        Text="{Binding DetalleSelected.Importe}"
                                        Keyboard="Numeric"
                                        CornerRadius="5"
                                        FontAttributes="None"
                                        FontSize="14"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="FillAndExpand"
                                        HorizontalTextAlignment="Center"
                                        VerticalTextAlignment="Center"
                                        Margin="0,0,0,-8"
                                        >
                                        <renderers:EntryIcon.Behaviors>
                                            <renderers:LengthValidateBehavior MaxLength="10"/>
                                        </renderers:EntryIcon.Behaviors>
                                    </renderers:EntryIcon>
                                </StackLayout>
                            </Frame>

                            <StackLayout
                                Grid.Column="3"
                                Grid.Row="3"
                                Grid.ColumnSpan="9"
                                VerticalOptions="End"
                                HorizontalOptions="End"
                                Orientation="Horizontal"
                                Spacing="5">

                                <Button
                                    Text="Nuevo"
                                    Command="{Binding NewProduct}"
                                    BackgroundColor="Yellow"
                                    CornerRadius="14"
                                    Margin="4"
                                    FontSize="12"
                                    TextColor="#000"
                                    HorizontalOptions="FillAndExpand"
                                    FontAttributes="Bold"
                                    IsEnabled="{Binding IsSelected}">
                                </Button>
                                <Button
                                    Text="Eliminar"
                                    Command="{Binding DeleteProduct}"
                                    CornerRadius="14"
                                    BackgroundColor="#2d572c"
                                    Margin="4"
                                    FontSize="12"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    HorizontalOptions="FillAndExpand"
                                    IsEnabled="{Binding IsSelected}">
                                </Button>
                                <Button
                                    Text="Agregar"
                                    Command="{Binding AddProduct}"
                                    CornerRadius="14"
                                    BackgroundColor="#5a0309"
                                    Margin="4"
                                    FontSize="12"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    HorizontalOptions="FillAndExpand">
                                </Button>
                                <Button
                                    IsVisible="{Binding HayProductos, Mode=TwoWay}"
                                    Text="Finalizar"
                                    CornerRadius="14"
                                    Command="{Binding FinishOrder}"
                                    BackgroundColor="Black"
                                    Margin="4"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    HorizontalOptions="FillAndExpand"
                                    FontSize="12">
                                </Button>
                            </StackLayout>
                        </Grid>
                    </Grid>
                    <!--HEADER-->
                    <Grid
                        IsVisible="{Binding HayOrden, Mode=TwoWay}"
                        Margin="1"
                        ColumnSpacing="0"
                        RowSpacing="0"
                        BackgroundColor="#9AC5F9"
                        Grid.Row="3"
                        Grid.Column="0"
                        Grid.ColumnSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <!--Producto-->
                            <ColumnDefinition Width="2.1*"></ColumnDefinition>
                            <!--Cantidad-->
                            <ColumnDefinition Width="1.1*"></ColumnDefinition>
                            <!--Peso Neto-->
                            <ColumnDefinition Width="1.1*"></ColumnDefinition>
                            <!--Precio-->
                            <ColumnDefinition Width="1.1*"></ColumnDefinition>
                            <!--Descuento-->
                            <ColumnDefinition Width="1.1*"></ColumnDefinition>
                            <!--Importe-->
                            <ColumnDefinition Width="1.1*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Label
                            Text="Producto"
                            Grid.Column="0"
                            FontSize="10"
                            Margin="5,0,0,0"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Center"
                            FontAttributes="Bold"
                            TextColor="#353535"
                            FontFamily="Helvetica">
                        </Label>
                        <Label
                            Text="Cantidad"
                            Grid.Column="1"
                            FontSize="10"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Center"
                            FontAttributes="Bold"
                            TextColor="#353535"
                            FontFamily="Helvetica">
                        </Label>
                        <Label
                            Text="Peso Neto"
                            Grid.Column="2"
                            FontSize="10"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Center"
                            FontAttributes="Bold"
                            TextColor="#353535"
                            FontFamily="Helvetica">
                        </Label>
                        <Label
                            Text="Precio"
                            Grid.Column="3"
                            FontSize="10"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Center"
                            FontAttributes="Bold"
                            TextColor="#353535"
                            FontFamily="Helvetica">
                        </Label>
                        <Label
                            Text="Descuento"
                            Grid.Column="4"
                            FontSize="10"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Center"
                            FontAttributes="Bold"
                            TextColor="#353535"
                            FontFamily="Helvetica">
                        </Label>
                        <Label
                            Text="Importe"
                            Grid.Column="5"
                            FontSize="10"
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Center"
                            FontAttributes="Bold"
                            TextColor="#353535"
                            FontFamily="Helvetica">
                        </Label>
                    </Grid>
                    <!--DATOS-->
                    <CollectionView 
                        x:Name="CollecionView"
                        IsVisible="{Binding HayOrden, Mode=TwoWay}"
                        ItemsSource="{Binding ListDetail}"
                        SelectedItem="{Binding DetalleSelected}"
                        SelectionChangedCommand="{Binding ProductoSelectionChanged}"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Grid.Row="4"
                        Margin="0"
                        SelectionMode="Single"
                        VerticalOptions="FillAndExpand"
                        HorizontalOptions="FillAndExpand"
                        BackgroundColor=" #e7eae8">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout 
                                Orientation="Vertical"
                                VerticalItemSpacing="1"></GridItemsLayout>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid
                                    Margin="1"
                                    ColumnSpacing="0"
                                    RowSpacing="0"
                                    BackgroundColor="#FFFFFF">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="25"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <!--Producto-->
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                        <!--Cantidad-->
                                        <ColumnDefinition Width=".5*"></ColumnDefinition>
                                        <!--Peso Neto-->
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <!--Precio-->
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <!--Descuento-->
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <!--Importe-->
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <!--DATOS-->
                                    <Label
                                        Text="{Binding Producto}"
                                        Grid.Column="0"
                                        FontSize="10"
                                        Margin="5,0,0,0"
                                        VerticalTextAlignment="Center"
                                        HorizontalTextAlignment="Center"
                                        TextColor="#353535"
                                        FontFamily="Helvetica">
                                    </Label>
                                    <Label
                                        Text="{Binding Cantidad}"
                                        Grid.Column="1"
                                        FontSize="10"
                                        VerticalTextAlignment="Center"
                                        HorizontalTextAlignment="Center"
                                        TextColor="#353535"
                                        FontFamily="Helvetica">
                                    </Label>
                                    <Label
                                        Text="{Binding PesoNeto}"
                                        Grid.Column="2"
                                        FontSize="10"
                                        VerticalTextAlignment="Center"
                                        HorizontalTextAlignment="Center"
                                        TextColor="#353535"
                                        FontFamily="Helvetica">
                                    </Label>
                                    <Label
                                        Text="{Binding Precio, StringFormat='{0:C2}'}"
                                        Grid.Column="3"
                                        FontSize="10"
                                        VerticalTextAlignment="Center"
                                        HorizontalTextAlignment="Center"
                                        TextColor="#353535"
                                        FontFamily="Helvetica">
                                    </Label>
                                    <Label
                                        Text="{Binding Descuento, StringFormat='{0:C2}'}"
                                        Grid.Column="4"
                                        FontSize="10"
                                        VerticalTextAlignment="Center"
                                        HorizontalTextAlignment="Center"
                                        TextColor="#353535"
                                        FontFamily="Helvetica">
                                    </Label>
                                    <Label
                                        Text="{Binding Importe, StringFormat='{0:C2}'}"
                                        Grid.Column="5"
                                        FontSize="10"
                                        VerticalTextAlignment="Center"
                                        HorizontalTextAlignment="Center"
                                        TextColor="#353535"
                                        FontFamily="Helvetica">
                                    </Label>
                                    <!--TERMINA DATOS-->
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <!--TERMINA DATOS-->

