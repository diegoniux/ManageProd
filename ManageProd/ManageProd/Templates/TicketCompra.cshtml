@using ManageProd.Models.DTO

@model OrdenCompraDTO

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title></title>
</head>
<body>
    <form id="form1" runat="server">
        <div>
            <style type="text/css">
                .tg {
                    border: 0px none white;
                    width: 275px;
                    height: 100%;
                    text-align: left;
                }

                    .tg td {
                        border-color: white;
                        border-style: none;
                        border-width: 1px;
                        font-family: Century Gothic;
                        font-size: 9px;
                        overflow: hidden;
                        word-break: normal;
                    }

                    .tg th {
                        border-color: white;
                        border-style: none;
                        border-width: 1px;
                        font-family: Century Gothic;
                        font-size: 9px;
                        font-weight: normal;
                        overflow: hidden;
                        word-break: normal;
                    }

                    .tg .tg-c3owCenter {
                        border-color: white;
                        border-style: none;
                        text-align: center;
                        vertical-align: top;
                        font-family: Century Gothic;
                        font-size: 13px;
                    }

                    .tg .tg-c3owLeft {
                        border-color: white;
                        border-style: none;
                        text-align: left;
                        vertical-align: top;
                        font-family: Century Gothic;
                        font-size: 13px;
                    }

                    .tg .tg-0pky {
                        border-color: white;
                        border-style: none;
                        text-align: left;
                        vertical-align: top;
                        font-family: Century Gothic;
                        font-size: 10px;
                    }

                    .tg .tg-0pkyCenter {
                        border-color: white;
                        border-style: none;
                        text-align: center;
                        vertical-align: top;
                        font-family: Century Gothic;
                        font-size: 10px;
                    }

                    .tg .tg-0pkyRight {
                        border-color: white;
                        border-style: none;
                        text-align: right;
                        vertical-align: top;
                        font-family: Century Gothic;
                        font-size: 10px;
                    }

                    .tg .tg-7btt {
                        border-color: white;
                        border-style: none;
                        font-weight: bold;
                        text-align: center;
                        vertical-align: top;
                        font-family: Century Gothic;
                        font-size: 10px;
                    }

                .Existencias {
                    border-color: white;
                    border-style: none;
                    text-align: justify;
                    vertical-align: top;
                    font-family: Century Gothic;
                    font-size: 9px;
                    height: 30px;
                }
            </style>
            <table class="tg">
                <thead>
                    <tr>
                        <th class="tg-c3owCenter" colspan="8"><span style="font-weight: bold">Comercializadora de Carnes Frias</span></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="tg-c3owLeft" colspan="8">
                            <span style="font-weight: bold">Fecha: </span> @Model.FechaCompra<br />
                        </td>
                    </tr>
                    <tr>
                        <td class="tg-c3owCenter" colspan="8">
                            <span style="font-weight: bold">Ticket de compra </span>                            
                        </td>
                    </tr>
                    <tr>
                        <td class="tg-c3owLeft" colspan="8"><span style="font-weight: bold">Generado por: </span>@Model.UsuarioCreacion</td>
                    </tr>
                    <tr>
                        <td class="tg-c3owLeft" colspan="8"><span style="font-weight: bold">Proveedor: </span>  @Model.Proveedor</td>
                    </tr>
                    @if (@Model.Notas != string.Empty)
                    {
                        <tr>
                            <td class="tg-0pky" colspan="8"><span style="font-weight: bold">Notas: </span>  @Model.Notas</td>
                        </tr>
                    }
                    <tr>
                        <td class="tg-7btt" colspan="3">Producto</td>
                        <td class="tg-7btt">Cant.</td>
                        <td class="tg-7btt">Peso B.</td>
                        <td class="tg-7btt">Peso N.</td>
                        <td class="tg-7btt">Precio</td>
                        <td class="tg-7btt">Importe</td>
                    </tr>
                    @foreach (var item in Model.Productos)
                    {
                        <tr>
                            <td class="tg-0pky" colspan="3">@item.ProductoDesc</td>
                            <td class="tg-0pkyCenter">@item.Cantidad</td>
                            <td class="tg-0pkyCenter">@item.PesoBruto</td>
                            <td class="tg-0pkyCenter">@item.PesoNeto</td>
                            <td class="tg-0pkyCenter">@item.Precio</td>
                            <td class="tg-0pkyRight ">@item.Importe</td>
                        </tr>
                    }

                    <tr>
                        <td colspan="8"></td>
                    </tr>
                    <tr>
                        <td class="tg-c3owCenter" colspan="8"><span style="font-weight: bold">Total a pagar: @Model.MontoTotal</span></td>
                    </tr>
                    <tr>
                        <td colspan="8"></td>
                    </tr>
                    <tr>
                        <td class="tg-c3owLeft" colspan="8">@Model.MontoLetra</td>
                    </tr>
                   
                </tbody>
            </table>
        </div>
    </form>
</body>
</html>




